<section class="ftco-section">
    <div class="container">
        <div class="d-flex justify-content-center mb-3">
            <div class="heading-section">
                <h2>Citas disponibles</h2>
            </div>
        </div>
        <div class="d-flex justify-content-center mb-3 my-2">
            <%= link_to "<< Anteriores", service_slots_path(@service, date: @previous_date), class: "btn btn-primary py-3 mx-1" if @previous_date %>
            <%= link_to "Siguientes >>", service_slots_path(@service, date: @next_date), class: "btn btn-primary py-3 mx-1" %>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="testimony-wrap p-4 text-center">
                    <div class="text">
                        <p class="name">
                            <%= I18n.l @date %><br>
                            Zona Horaria: <%= @service.time_zone %>
                        </p>
                    </div>
                    <div class="row mt-3 d-flex justify-content-center">
                        <div class="col mb-3">
                            <% @slots.each do |slot| %>
                            <p><%= link_to slot.display, new_slot_event_path(slot, date: @date), class: "btn btn-success py-3 px-5" %></p>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>