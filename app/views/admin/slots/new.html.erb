<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-1">
            <div class="text-center heading-section px-3">
                <h2>Nuevo Horario</h2>
                <p class="name">
                    Zona Horaria: <%= @service.time_zone_name || @service.time_zone %>
                </p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-6">
                <%= render 'form', service: @service, slot: @slot %>
            </div>
        </div>
    </div>
</section>