<section class="ftco-section">
  <div class="container">
    <div class="d-flex justify-content-center mb-3">
      <div class="heading-section">
        <h2>Mis Servicios</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <div class="testimony-wrap p-4 text-center">
          <div class="row mt-3 d-flex justify-content-center">
            <div class="col mb-3">
              <% @services.each do |service| %>
                <p><%= link_to service.name, admin_service_events_path(service), class: 'btn btn-primary py-3 px-5' %></p>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>