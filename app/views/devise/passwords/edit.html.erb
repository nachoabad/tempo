<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center mb-3">
            <div class="text-center heading-section">
                <h2>Cambia tu clave</h2>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6">
                <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                <%= f.hidden_field :reset_password_token %>
                <div class="form-group">
                    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control', placeholder: 'Nueva clave' %>
                </div>
                <div class="form-group">
                    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Nueva clave' %>
                </div>
                <div class="form-group">
                    <input type="submit" value="Cambiar clave" class="btn btn-primary btn-block py-3 px-5">
                </div>
                <% end %>
                <%= render "devise/shared/links" %>
            </div>
        </div>
    </div>
</section>