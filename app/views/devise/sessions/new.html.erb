  <div class="container">
    <div class="row justify-content-center mb-3">
      <div class="col-lg-4 col-md-6">
        <div class="text-center heading-section">
          <% auth_path = resource_name == :admin ? '/admins/auth/admin_google' : '/users/auth/user_google' %>
