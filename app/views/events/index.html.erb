<h1>Events</h1>

<table>
  <thead>
    <tr>
      <th>Note</th>
      <th>Date</th>
      <th>Slot</th>
      <th>User</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.note %></td>
        <td><%= event.date %></td>
        <td><%= event.slot.hour %></td>
        <td><%= event.user_id %></td>
       <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>